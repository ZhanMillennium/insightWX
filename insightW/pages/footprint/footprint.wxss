/* pages/footprint/footprint.wxss */
.history-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.play-title {
  margin-top: 30px;
  margin-bottom: 30px;
  justify-content: space-between;
}

.history-record {
  color: #1A1A1A;
  font-size: 24px;
  margin-left: 20px;
}

.edit {
  position: absolute;
  color: #005BBA;
  font-size: 20px;
  right: 20px;
}

.edit:active {
  color: #ff0000;
  font-size: 20px;
}

.history-list-title {
  text-overflow: ellipsis;
  font-size: 20px;
  color: #1A1A1A;
}
.box{
  width: 100px;
  height: 100px;
  margin-left: 20px;
  margin-bottom: 20px;
}
.history-list-image {
  width: 100px;
  height: 100px;
  border-radius: 8px;
}

.history-list-icon {
  justify-content: center;
  position: absolute;
  right: 20px;
  margin-top: 37.5px;
  width: 25px;
  height: 25px;
  border-radius: 4px;
}

.histroy-play-detail-text {
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  width: 320px;
}

.history-item {
  display: flex;
  width: 100%;
  left: 20px;
}

.history-bottom {
  display: flex;
  position: fixed;
  bottom: 0px;
  left: 0em;
  width: 100%;
  height: 60px;
  background-color: #dcdcdc;
  justify-content: center;
  align-items: center;
}

